[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[log]
	decorate = true
	abbrevCommit = true
[rebase]
	autostash = true
[pull]
	rebase = true
